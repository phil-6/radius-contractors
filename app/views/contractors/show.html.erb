<main id="contractor">
  <%= render @contractor %>

  <%# TODO: Style all of these %>
  <% if @user_rating.present? %>
    <%= render @user_rating %>
  <% end %>

  <% if @user_jobs.present? %>
    <div>
      <h2>Jobs <%= @contractor.name %> has done for you</h2>
      <% @user_jobs.each do |job| %>
        <%= render job %>
      <% end %>
    </div>
  <% end %>

  <% if @viewable_ratings.present? %>
    <div>
      <h2>Ratings <%= @contractor.name %> has received</h2>
      <% @viewable_ratings.each do |rating| %>
        <%= render rating %>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= link_to "Edit this contractor", edit_contractor_path(@contractor) %> |
    <%= link_to "Back to contractors", contractors_path %>
  </div>
</main>
