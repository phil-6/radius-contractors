<main class="account-form">
  <h1 class="page-title brand"><a href="/">Radius Contractors</a></h1>
  <div class="card form-card">
    <div class="card-body">
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-section row">
          <div class="field">
            <%= f.password_field :password, placeholder: "password", autocomplete: "new-password", class: "form-input" %>
            <%= f.label :password, class: "form-label floating-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "password confirmation", autocomplete: "new-password", class: "form-input" %>
            <%= f.label :password_confirmation, class: "form-label floating-label" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>