<main class="container account-form">
  <h1 class="page-title brand"><a href="/">Radius Contractors</a></h1>
  <div class="card form-card">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-section">
        <div class="row">
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-input", required: true %>
            <%= f.label :email, class: "form-label floating-label" %>
          </div>

          <div class="field">
            <%= f.text_field :town, placeholder: "Your Town or City", class: "form-input", required: true %>
            <%= f.label :town, class: "form-label floating-label" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.text_field :first_name, placeholder: "First Name", class: "form-input", required: true %>
            <%= f.label :first_name, class: "form-label floating-label" %>
          </div>

          <div class="field">
            <%= f.text_field :last_name, placeholder: "Last Name", class: "form-input", required: true %>
            <%= f.label :last_name, class: "form-label floating-label" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.password_field :password, placeholder: "password", autocomplete: "new-password", class: "form-input", required: true %>
            <%= f.label :password, class: "form-label floating-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "password confirmation", autocomplete: "new-password", class: "form-input", required: true %>
            <%= f.label :password_confirmation, class: "form-label floating-label" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
