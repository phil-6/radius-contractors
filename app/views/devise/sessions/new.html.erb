<main class="container account-form">
  <h1 class="page-title brand"><a href="/">Radius Contractors</a></h1>
  <div class="card form-card">
    <div class="mx-5">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col">
            <div class="form-floating">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-control" %>
              <%= f.label :email, class: "form-label" %><br/>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="form-floating">
              <%= f.password_field :password, autocomplete: "password", placeholder: "password", class: "form-control" %>
              <%= f.label :password, class: "form-label" %><br/>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
