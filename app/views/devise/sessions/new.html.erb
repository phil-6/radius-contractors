<main class="account-form">
  <h1 class="page-title brand"><a href="/">Radius Contractors</a></h1>
  <div class="card form-card">
    <div class="card-body">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-section row">
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-input", required: true %>
            <%= f.label :email, class: "form-label floating-label" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "password", placeholder: "password", class: "form-input", required: true %>
            <%= f.label :password, class: "form-label floating-label" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
