<%= form_with(model: [@contractor, job], class: "job-form") do |form| %>
  <% if job.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field">
        <%= form.textarea :description, placeholder: "Job Description", class: "form-input", required: true %>
        <%= form.label :description, class: "form-label floating-label" %>
    </div>
    <div class="field">
      <p>What was the work that <%= @contractor.name %> did?</p>
    </div>
  </div>

  <div class="row">
    <div class="field">
        <%= form.select :state, options_for_select(["Quote", "Planned", "In Progress", "Complete"]),
                        { prompt: "Select State" }, { class: "form-select form-input", required: true } %>
        <%= form.label :state, class: "form-label floating-label" %>
    </div>
    <div class="field">
      <p>What state is the job in? E.G. "Quote", "Planned", "In Progress", "Complete"</p>
    </div>
  </div>

  <div class="row mb-2">
    <div class="field">
      <%= form.label :start_date, class: "form-label" %>
      <%= form.date_field :start_date, class: "form-input date-input" %>
    </div>

    <div class="field">
      <%= form.label :end_date, class: "form-label" %>
      <%= form.date_field :end_date, class: "form-input date-input" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
        <%= form.textarea :review, placeholder: "Review", class: "form-input" %>
        <%= form.label :review, class: "form-label floating-label" %>
      </div>
    <div class="field">
      <p>What did you think of the work that <%= @contractor.name %> did?</p>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
