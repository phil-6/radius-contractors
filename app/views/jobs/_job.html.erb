<div id="<%= dom_id job %>" class="card">
  <div class="card-body">

    <p>
      <strong>Description:</strong>
      <%= job.description %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= job.status.humanize %>
    </p>

    <p>
      <strong>From:</strong>
      <%= job.start_date %>
      <br>
      <strong>To:</strong>
      <%= job.end_date %>
    </p>

    <% if job.review.present? %>
      <p>
        <strong>Job Review:</strong>
        <%= job.review %>
      </p>
    <% end %>

  </div>
</div>
