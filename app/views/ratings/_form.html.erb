<%= form_with(model: [@contractor, rating], data: { controller: "rating-form" }, class: "rating-form") do |form| %>
  <% if rating.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
        <% rating.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field">
      <%= form.textarea :review, placeholder: "Review", class: "form-input" %>
      <%= form.label :review, class: "form-label floating-label" %>
    </div>
    <div>
      <p>What do you think about <%= @contractor.name %>?</p>
    </div>
  </div>

  <div class="row form-range-row">
    <%= form.label :value_rating, "Value", class: "form-label" %>
    <%= form.range_field :value_rating, in: 0..10, step: 1, class: "form-range",
                         data: { rating_form_target: "valueRatingField",
                                 action: "change->rating-form#changeRating" } %>
    <p class="rating-display" data-rating-form-target="valueRatingDisplay"></p>
  </div>

  <div class="row form-range-row">
    <%= form.label :quality_rating, "Quality", class: "form-label" %>
    <%= form.range_field :quality_rating, in: 0..10, step: 1, class: "form-range",
                         data: { rating_form_target: "qualityRatingField",
                                 action: "change->rating-form#changeRating" } %>
    <p class="rating-display" data-rating-form-target="qualityRatingDisplay"></p>
  </div>

  <div class="row form-range-row">
    <%= form.label :tidiness_rating, "Tidiness", class: "form-label" %>
    <%= form.range_field :tidiness_rating, in: 0..10, step: 1, class: "form-range",
                         data: { rating_form_target: "tidinessRatingField",
                                 action: "change->rating-form#changeRating" } %>
    <p class="rating-display" data-rating-form-target="tidinessRatingDisplay"></p>
  </div>

  <div class="row form-range-row">
    <%= form.label :communication_rating, "Communication", class: "form-label" %>
    <%= form.range_field :communication_rating, in: 0..10, step: 1, class: "form-range",
                         data: { rating_form_target: "communicationRatingField",
                                 action: "change->rating-form#changeRating" } %>
    <p class="rating-display" data-rating-form-target="communicationRatingDisplay"></p>
  </div>

  <div class="row form-range-row">
    <%= form.label :professionalism_rating, "Professionalism", class: "form-label" %>
    <%= form.range_field :professionalism_rating, in: 0..10, step: 1, class: "form-range",
                         data: { rating_form_target: "professionalismRatingField",
                                 action: "change->rating-form#changeRating" } %>
    <p class="rating-display" data-rating-form-target="professionalismRatingDisplay"></p>
  </div>

  <div class="row form-range-row">
    <%= form.label :overall_rating, class: "form-label" %>
    <%= form.range_field :overall_rating, in: 0..10, step: 1, class: "form-range",
                         data: { rating_form_target: "overallRatingField",
                                 action: "change->rating-form#changeRating" } %>
    <p class="rating-display" data-rating-form-target="overallRatingDisplay"></p>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
