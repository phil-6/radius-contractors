<div class="col">
  <div id="<%= dom_id rating %>" class="card h-100 rating-card">
    <div class="card-header h-100">

      <% if rating.user == current_user %>
        <div class="controls">
          <%= link_to edit_contractor_rating_path(rating.contractor, rating), class: "icon-link link-primary" do %>
            <i class="fa-solid fa-pencil"></i>
          <% end %>
        </div>
      <% end %>

      <p class="lead">
        <strong>Overall rating:</strong>
        <%= rating.overall_rating %>
      </p>

      <p>
        <strong>Review:</strong>
        <%= rating.review %>
      </p>
    </div>

    <div class="card-body">
      <p class="sub-rating">
        <strong>Value:</strong>
        <%= rating.value_rating %>
      </p>

      <p class="sub-rating">
        <strong>Communication:</strong>
        <%= rating.communication_rating %>
      </p>

      <p class="sub-rating">
        <strong>Quality:</strong>
        <%= rating.quality_rating %>
      </p>

      <p class="sub-rating">
        <strong>Tidiness:</strong>
        <%= rating.tidiness_rating %>
      </p>

      <p class="sub-rating">
        <strong>Professionalism:</strong>
        <%= rating.professionalism_rating %>
      </p>
    </div>
    <div class="card-footer">
      <p>
        Rated by: <%= rating.user.first_name %>, <%= time_ago_in_words(rating.updated_at) %> ago
      </p>
    </div>
  </div>
</div>
